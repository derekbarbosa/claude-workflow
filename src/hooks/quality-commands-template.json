{
  "_comment": "Project-specific quality gate commands for Claude Code hooks",
  "_usage": "Copy this to .claude/quality-commands.json in your project root",
  
  "typescript": [
    "npm run typecheck",
    "npm run lint"
  ],
  
  "javascript": [
    "npm run lint",
    "npm run test -- --passWithNoTests"
  ],
  
  "rust": [
    "cargo check",
    "cargo clippy --all-targets --all-features -- -D warnings"
  ],
  
  "python": [
    "python -m py_compile",
    "python -m flake8"
  ],
  
  "go": [
    "go vet",
    "go fmt -l ."
  ],
  
  "java": [
    "mvn compile",
    "mvn test-compile"
  ],
  
  "cpp": [
    "make check",
    "cppcheck --error-exitcode=1"
  ],
  
  "_file_patterns": {
    "typescript": ["*.ts", "*.tsx"],
    "javascript": ["*.js", "*.jsx"],
    "rust": ["*.rs"],
    "python": ["*.py"],
    "go": ["*.go"],
    "java": ["*.java"],
    "cpp": ["*.c", "*.cpp", "*.h", "*.hpp"]
  },
  
  "_timeout_seconds": 30,
  
  "_examples": {
    "custom_typescript": [
      "npx tsc --noEmit --project tsconfig.json",
      "npx eslint --fix"
    ],
    "custom_rust_strict": [
      "cargo check --all-targets",
      "cargo clippy --all-targets --all-features -- -D warnings",
      "cargo fmt --check"
    ]
  }
}